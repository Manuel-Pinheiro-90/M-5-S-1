@model M_5_S_1.Models.Spedizione

@{
    ViewData["Title"] = "Dettagli Spedizione";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Spedizione</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero Spedizione
        </dt>
        <dd class="col-sm-10">
            @Model.NumeroIdentificativo
        </dd>
        <dt class="col-sm-2">
            Data Spedizione
        </dt>
        <dd class="col-sm-10">
            @Model.DataSpedizione.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Peso
        </dt>
        <dd class="col-sm-10">
            @Model.Peso
        </dd>
        <dt class="col-sm-2">
            Città Destinatario
        </dt>
        <dd class="col-sm-10">
            @Model.CittaDestinataria
        </dd>
        <dt class="col-sm-2">
            Indirizzo Destinatario
        </dt>
        <dd class="col-sm-10">
            @Model.IndirizzoDestinatario
        </dd>
        <dt class="col-sm-2">
            Nome Destinatario
        </dt>
        <dd class="col-sm-10">
            @Model.NomeDestinatario
        </dd>
        <dt class="col-sm-2">
            Costo
        </dt>
        <dd class="col-sm-10">
            @Model.Costo
        </dd>
        <dt class="col-sm-2">
            Data Consegna Prevista
        </dt>
        <dd class="col-sm-10">
            @Model.DataConsegnaPrevista.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente.Nome
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditSpedizione" asp-route-id="@Model.IdSpedizione" class="btn btn-warning">Modifica</a> |
    <a asp-action="GestioneSpedizioni" class="btn btn-secondary">Indietro</a>
</div>
