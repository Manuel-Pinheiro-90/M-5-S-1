@model M_5_S_1.Models.DettagliSpedizioneViewModel

@{
    ViewData["Title"] = "Verifica Spedizione";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="VerificaSpedizione" method="post">
    <div class="form-group">
        <label for="CodiceFiscalePartitaIVA">Codice Fiscale o Partita IVA</label>
        <input type="text" class="form-control" id="CodiceFiscalePartitaIVA" name="codiceFiscalePartitaIVA" required />
    </div>
    <div class="form-group">
        <label for="NumeroIdentificativo">NumeroIdentificativo</label>
        <input type="text" class="form-control" id="NumeroIdentificativo" name="NumeroIdentificativo" required />
    </div>
    <button type="submit" class="btn btn-primary">Verifica</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.ErrorMessage
    </div>
}

@if (Model != null && Model.Spedizione != null)
{
    <h3>Dettagli Spedizione</h3>
    <table class="table">
        <tr>
            <th>Data Spedizione</th>
            <td>@Model.Spedizione.DataSpedizione.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Peso</th>
            <td>@Model.Spedizione.Peso</td>
        </tr>
        <tr>
            <th>Città Destinatario</th>
            <td>@Model.Spedizione.CittaDestinataria</td>
        </tr>
        <tr>
            <th>Indirizzo Destinatario</th>
            <td>@Model.Spedizione.IndirizzoDestinatario</td>
        </tr>
        <tr>
            <th>Nome Destinatario</th>
            <td>@Model.Spedizione.NomeDestinatario</td>
        </tr>
        <tr>
            <th>Costo Spedizione</th>
            <td>@Model.Spedizione.Costo</td>
        </tr>
        <tr>
            <th>Data Consegna Prevista</th>
            <td>@Model.Spedizione.DataConsegnaPrevista.ToShortDateString()</td>
        </tr>
    </table>

    <h3>Aggiornamenti Spedizione</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Stato</th>
                <th>Luogo</th>
                <th>Descrizione</th>
                <th>Data e Ora</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var aggiornamento in Model.Aggiornamenti)
        {
            <tr>
                <td>@aggiornamento.Stato</td>
                <td>@aggiornamento.Luogo</td>
                <td>@aggiornamento.Descrizione</td>
                <td>@aggiornamento.DataOra</td>
            </tr>
        }
        </tbody>
    </table>
}
