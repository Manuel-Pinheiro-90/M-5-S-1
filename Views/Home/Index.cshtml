@model M_5_S_1.Models.DettagliSpedizioneViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h2>Verifica Spedizione</h2>

<form asp-action="VerificaSpedizione" method="post">
    <div class="form-group">
        <label for="codiceFiscalePartitaIVA">Codice Fiscale / Partita IVA</label>
        <input type="text" name="codiceFiscalePartitaIVA" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="numeroIdentificativo">Numero Spedizione</label>
        <input type="text" name="numeroIdentificativo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Verifica</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (Model != null && Model.Aggiornamenti != null && Model.Aggiornamenti.Any())
{
    <h3>Aggiornamenti Spedizione</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Stato</th>
                <th>Luogo</th>
                <th>Descrizione</th>
                <th>Data e Ora</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Aggiornamenti)
            {
                <tr>
                    <td>@item.Stato</td>
                    <td>@item.Luogo</td>
                    <td>@item.Descrizione</td>
                    <td>@item.DataOra</td>
                </tr>
            }
        </tbody>
    </table>
}
